@{
    ViewData["Title"] = "Other Service Page";
}


<h2>Upload to Azure</h2>

<hr>

@model FormViewModel
<form asp-controller="Service" asp-action="Submit" method="POST">
    <div class="form-group">
        <label>Upload your file</label>
        <input asp-for="filePath" type="file" class="form-control"/>

        <button type="submit">Submit</button>
    </div>
</form>

<hr>

@{
    if(ViewData["error"] != null)
    {
        <h3 style="color:red">
            @ViewData["error"]
        </h3>
    }
}

<h2>Recent Requests</h2>
<p style="color:blue">
@{
    if(ViewData["results"] != null)
    {
        @ViewData["results"]
    } else {
        <p>Nothing to see here...</p>
    }
}   
</p>


